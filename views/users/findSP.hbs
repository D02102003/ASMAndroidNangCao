<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
   
</head>

<body class="bg-info">
    

    <div class="form-group text-center" >
        <h1>Sản Phẩm Có Tên {{this.fullName}}</h1>
    </div>


    <table class="table table-bordered">
        <tr>
            <th>Ảnh</th>
            <th>Tên </th>
            <th>Mã</th>
            <th>Đơn Giá</th>
            <th>Màu Sắc</th>
            <th>Loại Sản Phẩm</th>
            <th>Mã Khách Hàng</th>
            <th>Tên Khách Hàng</th>
            
        </tr>

        {{#each data}}
        <tr>

            <td><img width="30" height="30" src="http://127.0.0.1:5500/views/image/{{this.filename}}" alt=""></td>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.password}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.address}}</td>
            <td>{{this.city}}</td>
            <td>{{this.people}}</td>
            
        </tr>
        {{/each}}
    </table>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
   
</body>

</html>